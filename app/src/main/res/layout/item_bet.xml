<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:paddingVertical="4dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivBetImage"
        android:layout_width="@dimen/betItemImageSize"
        android:layout_height="@dimen/betItemImageSize"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/bet_image"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />


    <TextView
        android:id="@+id/tvBetType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/ivBetImage"
        app:layout_constraintTop_toTopOf="@id/ivBetImage"
        app:layout_constraintBottom_toBottomOf="@id/ivBetImage"
        tools:text="Betting Win" />

    <TextView
        android:id="@+id/tvOdds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvBetType"
        app:layout_constraintStart_toEndOf="@id/tvBetType"
        tools:text="20" />



</androidx.constraintlayout.widget.ConstraintLayout>